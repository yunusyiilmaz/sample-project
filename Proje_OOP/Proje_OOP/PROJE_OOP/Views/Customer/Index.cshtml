@using PROJE_OOP.Entity
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşteri Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Şehir</th>
        <th>Ülke</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var customer in Model)
    {
<tr>
    <td>@customer.CustomerId</td>
    <td>@customer.ContactName</td>
    <td>@customer.City</td>
    <td>@customer.Country</td>
    <td><a href="/Customer/DeleteCustomer/@customer.CustomerId" class="btn btn-danger">Sil</a></td>
    <td><a href="/Customer/UpdateCustomer/@customer.CustomerId" class="btn btn-success">Güncelle</a></td>
</tr>

    }
</table>
<a href="/Customer/AddCustomer/" class="btn btn-primary">Müşteri Ekle</a>
